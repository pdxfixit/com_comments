<?xml version="1.0" encoding="utf-8"?>
<form type="browse" show_header="1" show_filters="1" show_pagination="1" norows_placeholder="COM_COMMENTS_COMMON_NORECORDS">
    <headerset>
        <header name="comments_comment_id" type="rowselect" />
        <header name="comment" type="fieldsearchable" sortable="true" buttonclass="btn" />
        <header name="item" type="field" sortable="false" />
        <header name="username" type="field" sortable="true" />
        <header name="ip" type="field" sortable="true" />
        <header name="created_on" type="field" sortable="true" />
        <header name="enabled" type="field" sortable="true" />
    </headerset>

    <fieldset name="items">
        <field name="comments_comment_id" type="selectrow" />

        <field name="comment" type="text" show_link="true" empty_replacement="(no title)" url="index.php?option=com_comments&amp;view=comment&amp;id=[ITEM:ID]" format="%.97s" />

        <field name="item" type="field" show_link="true" url="[ITEM:URL]" />
        <field name="username" type="field" empty_replacement="Guest User" />
        <field name="ip" type="field" />
        <field name="created_on" type="field" />
        <field name="enabled" type="enabled" />
    </fieldset>
</form>
